<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
  <!-- CSS + Bootstrap 4 -->

  <link rel="stylesheet" href="./css/styles.css">  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
 
  <!-- JavaScript de Bootstrap 4 (requiere jQuery) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>


</head>
<body class="container">
    </div>
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <!-- Contenido del sitio -->
            <h2>Publicar Post</h2>
            <form id="miFormulario"   role="form" action="/posts" method="post" class="form-horizontal" >
                <div class="form-group">
                    <label for="nombre_post" class="col-sm-2 control-label">
                        Título Post
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="Titulo" required
                            placeholder="Campo obligatorio" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="descripcion_post" class="col-sm-2 control-label">
                        Descripción
                    </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="Contenido" placeholder="Campo obligatorio" required></textarea>
                    </div>

                </div>
                <div class="form-group">
                    <label for="fecha_post" class="col-sm-2 control-label">
                        Autor
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="Autor"
                            placeholder="Campo obligatorio" required>
                    </div>
                    <label for="fecha_post" class="col-sm-2 control-label">
                       Link de lamagen
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="img"
                            placeholder="Campo obligatorio" required pattern="https?://.+" >
                    </div>
                </div>
                <button type="submit" id="miBoton" class="btn btn-warning" disabled>postear</button>
            </form>
            <!-- Fin Contenido del sitio -->

        </div>
    </div>

    <script src="./js/bloqueoform.js"></script>

</body>

</html>