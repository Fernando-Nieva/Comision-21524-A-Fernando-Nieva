<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="container">
    </div>
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <!-- Contenido del sitio -->
            <h2>Publicar Post</h2>
            <form id="miFormulario" action="/posts" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="nombre_post" class="col-sm-2 control-label">
                        Título Post
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="Titulo"
                            placeholder="Campo obligatorio">
                    </div>
                </div>
                <div class="form-group">
                    <label for="descripcion_post" class="col-sm-2 control-label">
                        Descripción
                    </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="Contenido" placeholder="Campo obligatorio"></textarea>
                    </div>

                </div>
                <div class="form-group">
                    <label for="fecha_post" class="col-sm-2 control-label">
                        Autor
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="Autor"
                            placeholder="Campo obligatorio">
                    </div>
                    <label for="fecha_post" class="col-sm-2 control-label">
                        Imagen
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nombre_post" name="img"
                            placeholder="@link de la imagen">
                    </div>
                </div>
                <button type="submit" id="miBoton" class="btn btn-success" disabled>postear</button>
            </form>
            <!-- Fin Contenido del sitio -->

        </div>
    </div>

    <script src="./js/bloqueoform.js"></script>

</body>

</html>